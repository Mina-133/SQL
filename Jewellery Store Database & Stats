--Create a jewellery store database

CREATE TABLE Minas_store (id INTEGER PRIMARY KEY, name TEXT, gold type TEXT, quantity INTEGER, price INTEGER, popularity INTEGER);
 
INSERT into Minas_store VALUES (1, "Necklaces", gold, 10.99, 56);
INSERT into Minas_store VALUES (2, "Earrings", silver, 5.99, 24);
INSERT into Minas_store VALUES (3, "Bracelets", silver, 7.99, 13);
INSERT into Minas_store VALUES (4, "Rings", gold, 4.99,33);
INSERT into Minas_store VALUES (5, "Anklets", silver, 4.99, 11);

--Display the database ordered by price
SELECT * FROM Minas_store 
ORDER BY price desc;

--What are the 2 most popular items?
SELECT name, price, popularity
FROM Minas_store
order by popularity
limit 2;
